<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#011420"
    tools:context=".Actualizar_desechos">

    <LinearLayout
        android:layout_width="373dp"
        android:layout_height="668dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Actualizar Informacion"
                android:textColor="#FAFAFA"
                android:textSize="48sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_actuali_info_mostrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#F6F4F4"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Para actualizar su informacion por favor colocar su correo y contraseña"
                android:textColor="#FAF6F6"
                android:textSize="20sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/editText_actuli_info_correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#03A9F4"
            android:ems="10"
            android:hint="Correo"
            android:inputType="textPersonName"
            android:textColor="#03A9F4"
            android:textColorHint="#03A9F4" />

        <EditText
            android:id="@+id/editText_actuali_info_contraseña"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#03A9F4"
            android:ems="10"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:textColor="#03A9F4"
            android:textColorHint="#03A9F4" />

        <EditText
            android:id="@+id/editText_actuali_info_año"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#03A9F4"
            android:ems="10"
            android:hint="Año"
            android:inputType="number"
            android:textColor="#03A9F4"
            android:textColorHint="#03A9F4" />

        <EditText
            android:id="@+id/editText_actuali_info_mes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#03A9F4"
            android:ems="10"
            android:hint="Mes"
            android:inputType="number"
            android:textColor="#03A9F4"
            android:textColorHint="#03A9F4" />

        <EditText
            android:id="@+id/editTex_actuali_info_inertes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#03A9F4"
            android:ems="10"
            android:hint="Desechos Inertes"
            android:inputType="number"
            android:textColor="#03A9F4"
            android:textColorHint="#03A9F4" />

        <EditText
            android:id="@+id/editTex_actuali_info_peligrosos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#03A9F4"
            android:ems="10"
            android:hint="Desechos Peligrosos"
            android:inputType="number"
            android:textColor="#03A9F4"
            android:textColorHint="#03A9F4" />

        <EditText
            android:id="@+id/editTex_actuali_info_urbanos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#03A9F4"
            android:ems="10"
            android:hint="Desechos Urbanos"
            android:inputType="number"
            android:textColor="#03A9F4"
            android:textColorHint="#03A9F4" />

        <EditText
            android:id="@+id/editTex_actuali_info_otros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#03A9F4"
            android:ems="10"
            android:hint="Desechos Otros"
            android:inputType="number"
            android:textColor="#03A9F4"
            android:textColorHint="#03A9F4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bn_actuali_info_actuali"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#03A9F4"
                android:text="Actualizar" />

            <Button
                android:id="@+id/bn_acutuali_info_volver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#03A9F4"
                android:text="Volver" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>